@model IEnumerable<Interimkantoor.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EindDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWerkschoenen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBadge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsKleding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantalPlaatsen)
            </th>
            <th></th>
        </tr>
