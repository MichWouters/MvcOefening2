@model BestellingListViewModel
@{
    ViewData["Title"] = "Overzicht bestellingen";
}
<h2> Bestellingen</h2>

<a asp-action="AddBestelling" class="btn btn-primary">Nieuwe bestelling</a>

<table class="table">
    <tr>
			<td>
                @Html.DisplayNameFor(v => v.Bestellingen[0].Id)
			</td>
			<td>
                @Html.DisplayNameFor(v => v.Bestellingen[0].Naam)
			</td>

        <th></th>
    </tr>
    @foreach (var item in Model.Bestellingen)
    {
        <tr>
			<td>
				@Html.DisplayFor(modelitem => item.Id)
			</td>
			<td>
                @Html.DisplayFor(modelitem => item.Naam)
			</td>

            <td><a asp-action="EditBestelling" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
            <td><a asp-action="GetBestelling" asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>
            <td><a asp-action="DeleteBestelling" asp-route-id="@item.Id" class="btn btn-primary">Delete</a></td>
        </tr>
    }
</table>