@using Microsoft.AspNetCore.Identity

@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Gebruiker" asp-area="" asp-action="Index">Hello @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Gebruiker" asp-area="" asp-action="Logout">Logout</a>
    </li>
}
else
{

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Gebruiker" asp-action="Login">Login</a>
        </li>
}
</ul>
